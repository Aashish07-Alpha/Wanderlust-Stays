<style>
  .search-btn{
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding:0 1rem 0 1rem;
  }

  .search-btn:hover{
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i{
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp{
    border-radius: 25px;
    padding:0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center" href="/listings">
      <i class="fa-regular fa-compass me-2"></i>
      <span class="fw-bold">WanderLust</span>
    </a>
    
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav me-auto">
        <a class="nav-link" href="/listings">
          <i class="fa-solid fa-globe me-1"></i>
          Explore
        </a>
        <% if(currUser) { %>
          <a class="nav-link" href="/bookings">
            <i class="fa-solid fa-calendar-check me-1"></i>
            My Bookings
          </a>
        <% } %>
      </div>

      <div class="navbar-nav me-3">
        <!-- Search Form -->
        <form class="d-flex" role="search" action="/listings" method="GET">
          <input 
            class="form-control search-inp me-2" 
            type="search" 
            placeholder="Search listings..."
            name="search"
            value="<%= typeof searchQuery !== 'undefined' ? searchQuery : '' %>"
          >
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-search"></i>Search
          </button>
        </form>
      </div>
      
      <div class="navbar-nav">
        <a class="nav-link" href="/listings/new">
          <i class="fa-solid fa-plus me-1"></i>
          List Your Property
        </a>
        
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup">
            <i class="fa-solid fa-user-plus me-1"></i>
            Sign Up
          </a>
          <a class="nav-link" href="/login">
            <i class="fa-solid fa-sign-in-alt me-1"></i>
            Log in
          </a>
        <% } %>
        
        <% if(currUser) { %>
          <div class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
              <i class="fa-solid fa-user-circle me-1"></i>
              <%= currUser.username %>
            </a>
            <ul class="dropdown-menu dropdown-menu-end shadow-lg">
              <li><a class="dropdown-item" href="/profile">
                <i class="fa-solid fa-user me-2"></i>Profile
              </a></li>
              <li><a class="dropdown-item" href="/bookings">
                <i class="fa-solid fa-calendar-check me-2"></i>My Bookings
              </a></li>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/logout">
                <i class="fa-solid fa-sign-out-alt me-2"></i>Log out
              </a></li>
            </ul>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</nav>
<% layout("/layouts/boilerplate") %>

<div class="container-fluid px-4 py-5">
  <!-- Profile Header -->
  <div class="row mb-5">
    <div class="col-lg-10 mx-auto">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <div class="row align-items-center">
            <div class="col-md-3 text-center mb-4 mb-md-0">
              <div class="position-relative d-inline-block">
                <div class="bg-gradient rounded-circle d-flex align-items-center justify-content-center" 
                     style="width: 120px; height: 120px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                  <span class="text-white fw-bold" style="font-size: 3rem;">
                    <%= user.username.charAt(0).toUpperCase() %>
                  </span>
                </div>
                <div class="position-absolute bottom-0 end-0 bg-success rounded-circle border border-white" 
                     style="width: 30px; height: 30px;"></div>
              </div>
            </div>
            <div class="col-md-9">
              <h1 class="display-5 fw-bold text-gradient mb-2"><%= user.username %></h1>
              <p class="text-muted mb-3">
                <i class="fa-solid fa-envelope me-2"></i><%= user.email %>
              </p>
              <p class="text-muted mb-0">
                <i class="fa-solid fa-calendar me-2"></i>Member since <%= new Date(user.createdAt || Date.now()).toLocaleDateString() %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistics Dashboard -->
  <div class="row mb-5">
    <div class="col-lg-10 mx-auto">
      <div class="row g-4">
        <div class="col-md-4">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
              <div class="bg-primary bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                   style="width: 60px; height: 60px;">
                <i class="fa-solid fa-home text-white fa-lg"></i>
              </div>
              <h3 class="fw-bold mb-1"><%= user.listings ? user.listings.length : 0 %></h3>
              <p class="text-muted mb-0">My Listings</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
              <div class="bg-success bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                   style="width: 60px; height: 60px;">
                <i class="fa-solid fa-calendar-check text-white fa-lg"></i>
              </div>
              <h3 class="fw-bold mb-1"><%= totalBookings %></h3>
              <p class="text-muted mb-0">Bookings</p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card border-0 shadow-sm h-100">
            <div class="card-body text-center p-4">
              <div class="bg-warning bg-gradient rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                   style="width: 60px; height: 60px;">
                <i class="fa-solid fa-star text-white fa-lg"></i>
              </div>
              <h3 class="fw-bold mb-1"><%= totalReviews %></h3>
              <p class="text-muted mb-0">Reviews</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="row g-5">
    <!-- Left Column -->
    <div class="col-lg-8">
      <!-- My Listings Section -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-0 py-3">
          <h4 class="fw-bold mb-0">
            <i class="fa-solid fa-home me-2 text-primary"></i>
            My Listings
          </h4>
        </div>
        <div class="card-body">
          <% if (user.listings && user.listings.length > 0) { %>
            <div class="row g-4">
              <% for (let listing of user.listings) { %>
                <div class="col-md-6">
                  <div class="card border-0 shadow-sm h-100">
                    <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>" 
                         style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                      <h6 class="card-title fw-bold"><%= listing.title %></h6>
                      <p class="text-muted small mb-2">
                        <i class="fa-solid fa-map-marker-alt me-1"></i>
                        <%= listing.location %>, <%= listing.country %>
                      </p>
                      <p class="text-success fw-bold mb-3">₹<%= listing.price.toLocaleString('en-IN') %> / night</p>
                      <div class="d-flex gap-2">
                        <a href="/listings/<%= listing._id %>" class="btn btn-outline-primary btn-sm flex-fill">
                          <i class="fa-solid fa-eye me-1"></i>View
                        </a>
                        <a href="/listings/<%= listing._id %>/edit" class="btn btn-outline-secondary btn-sm flex-fill">
                          <i class="fa-solid fa-edit me-1"></i>Edit
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          <% } else { %>
            <div class="text-center py-4">
              <i class="fa-solid fa-home fa-3x text-muted mb-3"></i>
              <h5 class="fw-bold mb-2">No Listings Yet</h5>
              <p class="text-muted mb-3">Start sharing your amazing properties with travelers!</p>
              <a href="/listings/new" class="btn btn-primary">
                <i class="fa-solid fa-plus me-2"></i>Add Your First Listing
              </a>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Recent Bookings Section -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-0 py-3">
          <h4 class="fw-bold mb-0">
            <i class="fa-solid fa-calendar-check me-2 text-success"></i>
            Recent Bookings
          </h4>
        </div>
        <div class="card-body">
          <% if (bookings && bookings.length > 0) { %>
            <div class="row g-3">
              <% for (let booking of bookings) { %>
                <div class="col-12">
                  <div class="d-flex align-items-center p-3 border rounded">
                    <img src="<%= booking.listing.image.url %>" alt="<%= booking.listing.title %>" 
                         class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                    <div class="flex-grow-1">
                      <h6 class="fw-bold mb-1"><%= booking.listing.title %></h6>
                      <p class="text-muted small mb-1">
                        <%= new Date(booking.startDate).toLocaleDateString() %> - 
                        <%= new Date(booking.endDate).toLocaleDateString() %>
                      </p>
                      <div class="d-flex align-items-center gap-3">
                        <span class="badge bg-success">Confirmed</span>
                        <span class="text-success fw-bold">₹<%= booking.totalPrice.toLocaleString('en-IN') %></span>
                      </div>
                    </div>
                    <a href="/listings/<%= booking.listing._id %>" class="btn btn-outline-primary btn-sm">
                      <i class="fa-solid fa-eye me-1"></i>View
                    </a>
                  </div>
                </div>
              <% } %>
            </div>
            <div class="text-center mt-3">
              <a href="/bookings" class="btn btn-outline-primary">View All Bookings</a>
            </div>
          <% } else { %>
            <div class="text-center py-4">
              <i class="fa-solid fa-calendar-x fa-3x text-muted mb-3"></i>
              <h5 class="fw-bold mb-2">No Bookings Yet</h5>
              <p class="text-muted mb-3">Start exploring amazing places and make your first booking!</p>
              <a href="/listings" class="btn btn-primary">
                <i class="fa-solid fa-search me-2"></i>Explore Listings
              </a>
            </div>
          <% } %>
        </div>
      </div>

      <!-- Recent Reviews Section -->
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 py-3">
          <h4 class="fw-bold mb-0">
            <i class="fa-solid fa-star me-2 text-warning"></i>
            My Reviews
          </h4>
        </div>
        <div class="card-body">
          <% if (reviews && reviews.length > 0) { %>
            <div class="row g-3">
              <% for (let review of reviews) { %>
                <div class="col-12">
                  <div class="border rounded p-3">
                    <div class="d-flex justify-content-between align-items-start mb-2">
                      <h6 class="fw-bold mb-0"><%= review.listing.title %></h6>
                      <p class="starability-result mb-0" data-rating="<%= review.rating %>"></p>
                    </div>
                    <p class="text-muted small mb-2"><%= review.comment %></p>
                    <p class="text-muted small mb-0">
                      <i class="fa-solid fa-calendar me-1"></i>
                      <%= new Date(review.createdAt).toLocaleDateString() %>
                    </p>
                  </div>
                </div>
              <% } %>
            </div>
          <% } else { %>
            <div class="text-center py-4">
              <i class="fa-solid fa-star fa-3x text-muted mb-3"></i>
              <h5 class="fw-bold mb-2">No Reviews Yet</h5>
              <p class="text-muted mb-3">Share your experiences by reviewing places you've visited!</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Right Column -->
    <div class="col-lg-4">
      <!-- Account Settings -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-0 py-3">
          <h5 class="fw-bold mb-0">
            <i class="fa-solid fa-cog me-2 text-primary"></i>
            Account Settings
          </h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <label class="form-label fw-bold">Email Notifications</label>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="emailNotifications" checked>
              <label class="form-check-label" for="emailNotifications">Booking confirmations</label>
            </div>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="marketingEmails">
              <label class="form-check-label" for="marketingEmails">Travel deals & offers</label>
            </div>
          </div>
          
          <div class="mb-3">
            <label class="form-label fw-bold">Privacy Settings</label>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="profileVisibility" checked>
              <label class="form-check-label" for="profileVisibility">Public profile</label>
            </div>
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" id="showBookings">
              <label class="form-check-label" for="showBookings">Show booking history</label>
            </div>
          </div>
          
          <hr>
          
          <div class="d-grid gap-2">
            <button class="btn btn-outline-primary">
              <i class="fa-solid fa-edit me-2"></i>Edit Profile
            </button>
            <button class="btn btn-outline-secondary">
              <i class="fa-solid fa-key me-2"></i>Change Password
            </button>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-0 py-3">
          <h5 class="fw-bold mb-0">
            <i class="fa-solid fa-bolt me-2 text-warning"></i>
            Quick Actions
          </h5>
        </div>
        <div class="card-body">
          <div class="d-grid gap-2">
            <a href="/listings/new" class="btn btn-primary">
              <i class="fa-solid fa-plus me-2"></i>Add New Listing
            </a>
            <a href="/bookings" class="btn btn-outline-success">
              <i class="fa-solid fa-calendar-check me-2"></i>View All Bookings
            </a>
            <a href="/listings" class="btn btn-outline-primary">
              <i class="fa-solid fa-search me-2"></i>Explore Listings
            </a>
          </div>
        </div>
      </div>

      <!-- Account Stats -->
      <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 py-3">
          <h5 class="fw-bold mb-0">
            <i class="fa-solid fa-chart-bar me-2 text-info"></i>
            Account Stats
          </h5>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6 mb-3">
              <h4 class="fw-bold text-primary mb-1"><%= user.listings ? user.listings.length : 0 %></h4>
              <small class="text-muted">Listings</small>
            </div>
            <div class="col-6 mb-3">
              <h4 class="fw-bold text-success mb-1"><%= totalBookings %></h4>
              <small class="text-muted">Bookings</small>
            </div>
            <div class="col-6">
              <h4 class="fw-bold text-warning mb-1"><%= totalReviews %></h4>
              <small class="text-muted">Reviews</small>
            </div>
            <div class="col-6">
              <h4 class="fw-bold text-info mb-1">0</h4>
              <small class="text-muted">Favorites</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  // Profile page interactions
  document.addEventListener('DOMContentLoaded', function() {
    // Toggle switches functionality
    const switches = document.querySelectorAll('.form-check-input');
    switches.forEach(switchEl => {
      switchEl.addEventListener('change', function() {
        // Here you would typically save the setting to the backend
        console.log(`${this.id}: ${this.checked}`);
      });
    });
  });
</script> 